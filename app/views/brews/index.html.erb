<h1><%= t 'listing brews' %></h1>

<table>
  <tr>
    <th><%= t 'title' %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brews.each do |brew| %>
  <tr>
    <td><%= brew.title %></td>
    <td><%= link_to t('show'), brew %></td>
    <td><%= link_to t('edit'), edit_brew_path(brew) %></td>
    <td><%= link_to t('destroy'), brew, method: :delete, data: { confirm: t('are you sure?') } %></td>
  </tr>
<% end %>
</table>

